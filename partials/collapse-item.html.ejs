<div class="card">
    <div class="card-header" id="heading-<%- id %>">
      <h2 class="mb-0">
        <button class="btn btn-link" 
                type="button" 
                data-toggle="collapse" 
                data-target="#collapse-<%- id %>" 
                aria-expanded="<%
                    if (collapsed) { %>false<% }
                    else { %>true<% }
                %>" 
                aria-controls="collapse-<%- id %>">
          <%= title %>
        </button>
      </h2>
    </div>

    <div id="collapse-<%- id %>" 
            class="collapse show" 
            aria-labelledby="heading-<%- id %>" 
            data-parent="#<%- parentID %>">
      <div class="card-body">
        <%- content %>
      </div>
    </div>
</div>